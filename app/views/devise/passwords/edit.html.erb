<div class="mt-8 mx-auto max-w-xl">
  <%= render "ui/controller_action" %>
  <div class="border-2 bg-white p-16 text-center rounded-md">
    <div class="max-w-md mx-auto">
      <h1 class="font-display font-bold text-6xl">Reimposta la password</h1>
      <%= render "devise/shared/error_messages", resource: @user %>
      <%= form_for(
            resource,
            as: resource_name,
            url: password_path(resource_name),
            html: { method: :put, class: "mt-16 text-left mx-auto space-y-4" },
          ) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <div>
          <%= f.label :password, "Nuova password", class: "font-mono block text-sm font-medium leading-6 text-gray-900" %>
          <%= tag.em("[minimo #{@minimum_password_length} caratteri]", class: "text-xs font-mono") if @minimum_password_length %>
          <div class="mt-2">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "*******", class: "block w-full py-1.5 text-stone-900 placeholder:text-stone-400 border-2 border-stone-200 rounded-md text-sm" %>
          </div>
        </div>
        <div>
          <%= f.label :password_confirmation, "conferma password", class: "font-mono block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "*******", class: "block w-full py-1.5 text-stone-900 placeholder:text-stone-400 border-2 border-stone-200 rounded-md text-sm" %>
          </div>
        </div>
        <div class="flex mx-auto">
          <%= f.submit "Cambia la mia password", class: "mt-4 w-full py-2 text-stone-50 bg-stone-800 rounded-md hover:cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
