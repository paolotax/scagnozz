<%#
  [RailsNotes UI Addition]
  Custom reset password mailer template, using the RailsNotes UI email components.
%>
<%= render Email::Plain::Container.new(
     padding: "32px 64px",
		 dark_mode_enabled: false
   ) do |container| %>
  <%= render Email::Heading.new(text: "Reimposta la password.") %>
  <%= render Email::Text.new(text: "Ciao #{@resource.email}, abbiamo ricevuto una richiesta per reimpostare la tua password. Se ti sembra giusto, fai clic sul pulsante in basso per impostare la nuova password.") %>
  <%= render Email::PercentageButton.new(
        text: "Reimposta la tua password ▸▸▸",
        href: edit_password_url(@resource, reset_password_token: @token),
        bold: true,
        height: "12px",
        shadow: "none",
      ) %>
  <%= render Email::Text.new(text: "Se non hai richiesto tu la reimpostazione della password, puoi tranquillamente ignorare questa email.") %>
  <%= render Email::Text.new do %>
    Arrivederci, <br />
    <%= link_to "@paolotax", "https://twitter.com/hrrsnbbnt" %>
  <% end %>
  <%= render Email::Colorblock.new(
        color: Email::Colors::RED_50,
        border_width: "0",
        border_radius: "12px",
        margin: "64px auto auto aputo",
        padding: "16px 24px",
      ) do %>
    <%= render Email::Text.new(text: "Scagnozz", bold: true, letter_spacing: "-0.0375rem", margin: "8px auto", color: Email::Colors::GRAY_700) %>
    <%= render Email::Text.new(size: "12px", margin: "4px auto", color: Email::Colors::GRAY_600) do %>
      Visit our <%= link_to "home page", "https://railsnotesui.xyz" %> to learn more, or check out our <%= link_to "help docs", "https://railsnotesui.xyz" %>.
    <% end %>
    <%= render Email::Text.new(text: "© #{Time.now.year} Scagnozz", margin: "4px auto", size: "12px", color: Email::Colors::GRAY_600) %>
  <% end %>
<% end %>
